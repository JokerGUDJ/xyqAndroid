<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_social_search">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/album_dp_15"
        android:layout_marginRight="@dimen/album_dp_15"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:gravity="center_vertical"
        android:background="@drawable/white_btn_round_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/album_dp_15"
            android:layout_height="@dimen/album_dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/album_dp_15"
            android:src="@drawable/ic_contact_search" />
        <EditText
            android:id="@+id/contact_input_content_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:hint="请输入姓名或机构名称"
            android:gravity="left|center"
            android:textColorHint="#BFC1C6"
            android:singleLine="true"
            android:maxLines="1"
            android:enabled="true"
            android:imeOptions="actionSearch"
            android:textColor="#303030"
            android:textSize="@dimen/dp_14" />

    </LinearLayout>
</LinearLayout>
