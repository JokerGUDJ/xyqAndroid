<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/album_dp_50"
    android:paddingLeft="15dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_click"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="@dimen/album_dp_15"
        android:src="@drawable/nim_checkbox_not_checked" />

    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/ivAvatar"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:src="@drawable/ic_user_default_icon" />

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="#303030"
        android:textSize="@dimen/dp_14"
        android:paddingLeft="15dp" />
    <TextView
        android:id="@+id/tv_orgName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="#303030"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/dp_14"
        android:paddingLeft="15dp" />

</LinearLayout>
