<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Titleview">
        <attr name="backIsShow" format="boolean"/>
        <attr name="zxingIsShow" format="boolean"/>
        <attr name="titleIsShow" format="boolean"/>
        <attr name="messageIsShow" format="boolean"/>
        <attr name="editIsShow" format="boolean"/>
        <attr name="backGround" format="color"/>
        <attr name="titleString" format="string"/>
        <attr name="lightIcon" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="PraiseListView">
        <attr name="item_color" format="color"/>
        <attr name="item_selector_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ExpandTextView">
        <attr name="showLines" format="integer"/>
    </declare-styleable>
    <declare-styleable name="ViewPagerIndicator">
        <attr name="vpi_selected_color" format="color|reference"/>
        <attr name="vpi_default_color" format="color|reference"/>
        <attr name="vpi_radius" format="dimension|reference"/>
        <attr name="vpi_length" format="dimension|reference"/>
        <attr name="vpi_distance" format="dimension|reference"/>
        <attr name="vpi_num" format="integer"/>
        <attr name="vpi_indicatorType">
            <enum name="LINE" value="0" />
            <enum name="CIRCLE" value="1" />
            <enum name="CIRCLE_LINE" value="2" />
            <enum name="BEZIER" value="3" />
            <enum name="SPRING" value="4" />
        </attr>
        <attr name="vpi_distanceType">
            <enum name="BY_RADIUS" value="0" />
            <enum name="BY_DISTANCE" value="1" />
            <enum name="BY_LAYOUT" value="2" />
        </attr>
        <attr name="vpi_animation" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="custom_banner">
        <attr name="indicatorGravity" format="enum">
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
            <enum name="CENTER" value="3" />
        </attr>
        <attr name="indicatorStyle" format="enum">
            <enum name="NONE" value="1" />
            <enum name="NUMBER" value="2" />
            <enum name="ORDINARY" value="3" />
        </attr>
        <attr name="indicatorSelectRes" format="reference" />
        <attr name="indicatorUnSelectRes" format="reference" />
        <attr name="indicatorInterval" format="dimension" />
    </declare-styleable>

</resources>