<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.xej.xhjy.ui.view.StatusBarHoldView
        android:id="@+id/holdview"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/holdview"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_margin="@dimen/dp_15"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/ic_all_return" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="消息详情"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ll_title"
        android:background="#efefef"/>
    <ImageView
        android:id="@+id/img_message"
        android:layout_width="@dimen/dp_155"
        android:layout_height="@dimen/dp_155"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_title"
        android:layout_marginTop="@dimen/dp_61"
        android:src="@drawable/icon_message"/>
    <TextView
        android:id="@+id/tv_news_message_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dp_35"
        android:layout_below="@+id/img_message"
        android:layout_weight="1"
        android:ellipsize="end"
        android:text="标题标题"
        android:layout_centerHorizontal="true"
        android:textColor="#ff282c3d"
        android:textFontWeight="600"
        android:textSize="@dimen/sp_24" />


    <TextView
        android:id="@+id/tv_news_message_details_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_news_message_details_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_5"
        android:text="内容"
        android:textColor="#5b5d68"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/into_details"
        android:layout_width="@dimen/dp_294"
        android:layout_height="@dimen/dp_58"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_news_message_details_content"
        android:layout_marginTop="@dimen/dp_102"
        android:text="查看详情"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_16"
        android:paddingTop="@dimen/dp_12"
        android:textColor="@color/white"
        android:background="@drawable/butn_big_weak"/>

</RelativeLayout>
