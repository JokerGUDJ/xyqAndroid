<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <com.netease.nim.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/img_item_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_user_default_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="王二小"
                android:textColor="@color/gray_text"
                android:textStyle="bold"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="南京银行古风有限公司"
                android:textColor="#768094"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_follow_btn"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_16"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ic_people_follow"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_65"
        android:background="@color/gray_line" />
</LinearLayout>
