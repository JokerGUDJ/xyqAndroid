<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.xej.xhjy.ui.view.StatusBarHoldView
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <com.xej.xhjy.ui.view.TitleView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:zxingIsShow="false" />


    <LinearLayout
        android:id="@+id/ll_base_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_title"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_85"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="联系人类型"
                android:textColor="#5B5D68"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_user_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="right"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#303030"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e4e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_85"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="职务"
                android:textColor="#5B5D68"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_user_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="@dimen/dp_15"
                android:ellipsize="end"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="#303030"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e4e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_85"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="姓名"
                android:textColor="#5B5D68"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="@dimen/dp_15"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#303030"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e4e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_85"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="办公电话"
                android:textColor="#5B5D68"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_user_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="@dimen/dp_15"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#303030"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e4e8" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_85"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="移动电话"
                android:textColor="#5B5D68"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_mobile_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="@dimen/dp_15"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="#303030"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e4e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_85"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="电子邮箱"
                android:textColor="#5B5D68"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="@dimen/dp_15"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#303030"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e4e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_85"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="邮寄地址"
                android:textColor="#5B5D68"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="@dimen/dp_15"
                android:lineSpacingExtra="3dp"
                android:textStyle="bold"
                android:textColor="#303030"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_call"
        android:layout_width="@dimen/dp_282"
        android:layout_height="@dimen/dp_54"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_50"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_12"
        android:background="@drawable/butn_big_weak"
        android:text="拨打电话"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/add_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/bg_item_homefragmeny"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="1"
                android:gravity="center"
                android:text="请选择要拨打的电话号码"
                android:textColor="#999999"
                android:textSize="@dimen/sp_17" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E2E4E8" />
            <TextView
                android:id="@+id/call_mobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#303030"
                android:textSize="@dimen/sp_17" />

            <View

                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E2E4E8" />

            <TextView
                android:id="@+id/call_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_weight="1"
                android:background="@drawable/club_bg"
                android:gravity="center"
                android:textColor="#303030"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>

        <TextView
            android:id="@+id/add_canel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/club_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>
</RelativeLayout>
