<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="@dimen/dp_15">
    <ImageView
        android:id="@+id/img_item_icon"
        android:layout_width="@dimen/dp_31"
        android:layout_height="@dimen/dp_31"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/ic_user_default_icon" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:maxLines="1"
        android:ellipsize="end"
        android:minWidth="50dp"
        android:layout_weight="0.1"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#303030"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_item_complany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/dp_44"
        android:ellipsize="end"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textColor="#303030"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_item_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginLeft="20dp"
        android:background="@drawable/red_btn_round_bg"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="管理员"
        android:textColor="@color/white"
        android:textSize="12dp" />
</LinearLayout>
