<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="原手机号码"
                android:textStyle="bold"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/edt_new_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#efefef"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="图形验证"
                android:textColor="@color/gray_text"
                android:textStyle="bold"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_24">


                <EditText
                    android:id="@+id/edt_auth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入"
                    android:maxLines="1"
                    android:textColor="@color/gray_text"
                    android:textColorHint="@color/gray_text_hint"
                    android:textCursorDrawable="@null"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/img_auth"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_25"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#efefef"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="短信验证码"
                android:textStyle="bold"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_sms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入"
                    android:maxLines="1"
                    android:textColor="@color/gray_text"
                    android:textColorHint="@color/gray_text_hint"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/sp_14" />

                <com.xej.xhjy.common.view.countdown.CountdownView
                    android:id="@+id/tv_sms"
                    android:layout_width="@dimen/dp_92"
                    android:layout_height="@dimen/dp_28"
                    android:background="@drawable/selector_btn_login"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:text="获取验证码"
                    android:textColor="#FF5241" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_step2_next"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/red_rippleg_round_bg"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:text="确定"
        android:textColor="@color/white" />
</LinearLayout>
