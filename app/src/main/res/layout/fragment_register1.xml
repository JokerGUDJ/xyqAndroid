<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">
    <com.xej.xhjy.ui.view.StatusBarHoldView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/white"/>

    <com.xej.xhjy.ui.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/status_bar"
        app:zxingIsShow="false"
        app:messageIsShow="false"
        app:titleString="注册"/>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/titleview"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#E54844"
                android:text="*"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="姓名"
                android:textSize="@dimen/sp_14"/>
            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:textColor="#303030"
                android:textColorHint="#BFC1C6"
                android:background="@color/transparent"
                android:textCursorDrawable="@null"
                android:layout_marginLeft="@dimen/dp_5"
                android:hint="请输入"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E2E4E8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E54844"
                android:text="*"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="性别"
                android:textSize="@dimen/sp_14"/>
            <com.xej.xhjy.common.view.spinner.NiceSpinner
                android:id="@+id/spinner_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_14"
                android:paddingLeft="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_10"
                android:textColor="#303030"
                app:arrowDrawable="@drawable/icon_arrow_down"
                android:gravity="center_vertical|right"
                app:arrowTint="#BFC1C6"
                app:textTint="#303030"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E2E4E8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E54844"
                android:text="*"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="手机号"
                android:textSize="@dimen/sp_14"/>
            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:textColor="#303030"
                android:textColorHint="#BFC1C6"
                android:background="@color/transparent"
                android:textCursorDrawable="@null"
                android:hint="请输入"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E2E4E8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E54844"
                android:text="*"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="所属机构"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/tv_complany"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:textColor="@color/gray_text_hint"
                android:textCursorDrawable="@null"
                android:text="请搜索"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E2E4E8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E54844"
                android:text="*"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="所属部门"
                android:textSize="@dimen/sp_14"/>
            <EditText
                android:id="@+id/edt_department"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:textColor="#303030"
                android:textColorHint="#BFC1C6"
                android:background="@color/transparent"
                android:textCursorDrawable="@null"
                android:hint="请输入"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E2E4E8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E54844"
                android:text="*"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="职务"
                android:textSize="@dimen/sp_14"/>
            <com.xej.xhjy.common.view.spinner.NiceSpinner
                android:id="@+id/spinner_job"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_14"
                android:textColor="#303030"
                android:paddingLeft="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_10"
                app:arrowDrawable="@drawable/icon_arrow_down"
                android:gravity="center_vertical|right"
                app:arrowTint="#BFC1C6"
                app:textTint="#303030"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E2E4E8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:text="固话"
                android:textSize="@dimen/sp_14"/>
            <EditText
                android:id="@+id/edt_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:textColor="#303030"
                android:textColorHint="#BFC1C6"
                android:background="@color/transparent"
                android:textCursorDrawable="@null"
                android:hint="请输入"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E2E4E8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:text="邮箱"
                android:textSize="@dimen/sp_14"/>
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:textColor="#303030"
                android:textColorHint="#BFC1C6"
                android:background="@color/transparent"
                android:textCursorDrawable="@null"
                android:hint="请输入"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E2E4E8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:text="工作地址"
                android:textSize="@dimen/sp_14"/>
            <EditText
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:textColor="#303030"
                android:textColorHint="#BFC1C6"
                android:background="@color/transparent"
                android:textCursorDrawable="@null"
                android:hint="请输入"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_step1_next"
        android:layout_width="@dimen/dp_282"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/butn_big_weak"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_12"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_info"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:text="下一步"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_40"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/mine_logo"/>
    </LinearLayout>
</RelativeLayout>
