<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_39"
    android:background="@drawable/bg_social_search"
    android:paddingTop="@dimen/dp_7"
    android:paddingBottom="@dimen/dp_7"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/contact_input_content_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        android:background="@drawable/white_btn_round_bg"
        android:hint="请输入机构名称"
        android:singleLine="true"
        android:paddingLeft="35dp"
        android:paddingRight="60dp"
        android:textColor="@color/gray_text"
        android:textColorHint="@color/gray_text_hint"
        android:textCursorDrawable="@null"
        android:imeOptions="actionSearch"
        android:textSize="@dimen/sp_13" />
    <View
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@drawable/ic_search_icon"/>
    <View
        android:id="@+id/edit_cancel"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_70"
        android:visibility="gone"
        android:background="@drawable/edit_cancel_grey"/>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="#ff282c3d"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_14"/>
</RelativeLayout>