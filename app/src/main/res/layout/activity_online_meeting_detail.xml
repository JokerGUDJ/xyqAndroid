<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.xej.xhjy.ui.view.StatusBarHoldView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/white" />
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_below="@+id/status_bar"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/ic_all_return"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:text="会议详情"/>
        <ImageView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/icon_share"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_title">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF5241"
                        android:textSize="@dimen/sp_14"
                        android:text="*"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#5B5D68"
                        android:textSize="@dimen/sp_14"
                        android:text="会议类型"/>
                    <TextView
                        android:id="@+id/tv_meeting_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="#303030"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/dp_38"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF5241"
                        android:textSize="@dimen/sp_14"
                        android:text="*"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#5B5D68"
                        android:textSize="@dimen/sp_14"
                        android:text="会议名称"/>
                    <TextView
                        android:id="@+id/tv_meeting_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_38"
                        android:textColor="#303030"
                        android:gravity="right"
                        android:background="@null"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EFEFEF"/>
                <LinearLayout
                    android:id="@+id/ll_meeting_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF5241"
                        android:textSize="@dimen/sp_14"
                        android:text="*"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#5B5D68"
                        android:textSize="@dimen/sp_14"
                        android:text="开始时间"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_38"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:textColor="#303030"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_14"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:src="@drawable/icon_select_meeting_date"/>
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EFEFEF"/>
                <LinearLayout
                    android:id="@+id/ll_meeting_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF5241"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:text="*"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#5B5D68"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:text="结束时间"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginLeft="@dimen/dp_38"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:textColor="#303030"
                            android:textSize="@dimen/sp_14"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:src="@drawable/icon_select_meeting_date"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EFEFEF"/>
                <LinearLayout
                    android:id="@+id/ll_meeting_deadline_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF5241"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:text="*"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#5B5D68"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:text="报名截至"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/tv_deadline_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginLeft="@dimen/dp_38"
                            android:layout_gravity="center_vertical"
                            android:textColor="#303030"
                            android:textSize="@dimen/sp_14"/>
                        <ImageView
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_13"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="right"
                            android:src="@drawable/icon_select_meeting_date"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/divier1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EFEFEF"/>
                <RelativeLayout
                    android:id="@+id/rl_attend_people"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/tv_attend_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#5B5D68"
                        android:textSize="@dimen/sp_14"
                        android:layout_centerVertical="true"
                        android:text="参会人员"/>
                    <TextView
                        android:id="@+id/tv_attend_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#303030"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/tv_attend_title"
                        android:gravity="right"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/dp_38"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EFEFEF"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/tv_meeting_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#5B5D68"
                        android:textSize="@dimen/sp_14"
                        android:layout_centerVertical="true"
                        android:text="允许参会人员"/>
                    <RadioButton
                        android:id="@+id/rd_video"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:drawableLeft="@drawable/radiobutton"
                        android:layout_marginRight="@dimen/dp_25"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_toLeftOf="@+id/rd_audio"
                        android:checked="false"
                        android:textColor="#303030"
                        android:text="开启视频"/>
                    <RadioButton
                        android:id="@+id/rd_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:button="@null"
                        android:drawableLeft="@drawable/radiobutton"
                        android:drawablePadding="@dimen/dp_5"
                        android:checked="false"
                        android:textColor="#303030"
                        android:text="开启音频"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EFEFEF"/>
                <RelativeLayout
                    android:id="@+id/rl_master"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/tv_master_title"
                        android:layout_width="@dimen/dp_56"
                        android:layout_height="wrap_content"
                        android:textColor="#5B5D68"
                        android:textSize="@dimen/sp_14"
                        android:layout_centerVertical="true"
                        android:text="主持人"/>
                    <TextView
                        android:id="@+id/tv_master_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#303030"
                        android:singleLine="true"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/dp_38"/>
                </RelativeLayout>

                <View
                    android:id="@+id/divier2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EFEFEF"/>
                <LinearLayout
                    android:id="@+id/ll_survey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#5B5D68"
                        android:textSize="@dimen/sp_14"
                        android:text="调查问卷"/>
                    <TextView
                        android:id="@+id/tv_survey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/dp_38"
                        android:textSize="@dimen/sp_14"
                        android:paddingLeft="@dimen/dp_5"
                        android:textColor="#303030"
                        android:gravity="center_vertical|right"/>
                </LinearLayout>
                <View
                    android:id="@+id/divier3"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EFEFEF"/>
                <RelativeLayout
                    android:id="@+id/rl_meeing_doc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#5B5D68"
                        android:textSize="@dimen/sp_14"
                        android:layout_centerVertical="true"
                        android:text="会议文档"/>
                    <TextView
                        android:id="@+id/tv_meeing_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="#303030"
                        android:singleLine="true"
                        android:text="查看"
                        android:layout_marginLeft="@dimen/dp_38"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_btn"
                    android:layout_width="@dimen/dp_282"
                    android:layout_height="@dimen/dp_54"
                    android:textSize="@dimen/sp_14"
                    android:text="加入会议"
                    android:visibility="invisible"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/dp_12"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_46"
                    android:layout_marginBottom="@dimen/dp_46"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/butn_big_weak"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_20"
                android:src="@drawable/mine_logo"/>
        </RelativeLayout>
</RelativeLayout>