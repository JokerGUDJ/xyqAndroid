<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F8F8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.xej.xhjy.ui.view.StatusBarHoldView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/white"/>

        <com.xej.xhjy.ui.view.TitleView
            android:id="@+id/titleview"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:zxingIsShow="false"
            app:messageIsShow="false"
            app:titleString="注册"/>
        <ImageView
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_145"
            android:background="@drawable/ic_register_sucess" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="注册成功"
            android:textColor="#282C3D"
            android:paddingTop="@dimen/dp_15"
            android:textSize="@dimen/dp_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="我们将在3个工作日内完成审核"
            android:textColor="#282C3D"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/btn_step3_next"
            android:layout_width="@dimen/dp_282"
            android:layout_height="@dimen/dp_54"
            android:background="@drawable/butn_big_weak"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_72"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:text="确认"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/mine_logo"/>
    </LinearLayout>
</RelativeLayout>
