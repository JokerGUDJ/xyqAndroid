<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_194"
        android:orientation="vertical"
        android:background="@drawable/ic_mine_titile_bg">
        <com.xej.xhjy.ui.view.StatusBarHoldView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/transparent"/>

        <com.xej.xhjy.ui.view.TitleView
            android:id="@+id/mine_titleview"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:titleString="我的"
            app:backGround="@color/transparent"
            app:backIsShow="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_head"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:background="@drawable/bg_white_circle">
                    <ImageView
                        android:id="@+id/img_head"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:src="@drawable/ic_user_default_icon"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_user_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="@dimen/dp_37"
                    android:layout_toRightOf="@+id/ll_head"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dp_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#282C3D"
                        android:textSize="@dimen/sp_20"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_complany_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#5B5D68"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_no_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="请登录"
                        android:textColor="#4C4C4C"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrow_right_grey" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_date_picker_center_bg"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ll_my_meet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="我的会议"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@drawable/ic_mine_my_meet"
            android:drawableRight="@drawable/arrow_right_grey"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#1E293D"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_45"
            android:background="@color/gray_line" />
        <LinearLayout
            android:id="@+id/ll_my_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="会议报名"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@drawable/icon_meeting_register"
                android:drawableRight="@drawable/arrow_right_grey"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="#1E293D"
                android:textSize="14dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_45"
                android:background="@color/gray_line" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_my_attent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:drawableLeft="@drawable/ic_attention"
                android:drawableRight="@drawable/arrow_right_grey"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="我的关注"
                android:textColor="#1E293D"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_45"
                android:background="@color/gray_line" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_my_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:drawableLeft="@drawable/ic_points"
                    android:drawableRight="@drawable/arrow_right_grey"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:textColor="#1E293D"
                    android:text="我的积分"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tv_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_30"
                    android:textColor="#ffff8d3c"
                    android:text="0积分"
                    android:textSize="@dimen/sp_14"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_45"
                android:background="@color/gray_line" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_my_meeting_and_training_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:drawableLeft="@drawable/icon_final_meeting_register"
                android:drawableRight="@drawable/arrow_right_grey"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="年度会议及培训报名"
                android:textColor="#1E293D"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_45"
                android:background="@color/gray_line" />
        </LinearLayout>
        <TextView
            android:id="@+id/ll_my_safe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="账户安全"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@drawable/ic_mine_safe"
            android:drawableRight="@drawable/arrow_right_grey"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#1E293D"
            android:textSize="14dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_45"
            android:background="@color/gray_line" />
        <LinearLayout
            android:id="@+id/ll_logout_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="账户注销"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@drawable/icon_logout_account"
                android:drawableRight="@drawable/arrow_right_grey"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="#1E293D"
                android:textSize="14dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_45"
                android:background="@color/gray_line" />
        </LinearLayout>
        <TextView
            android:id="@+id/ll_my_aboutus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@drawable/ic_mine_about"
            android:drawableRight="@drawable/arrow_right_grey"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#1E293D"
            android:textSize="14dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_45"
            android:background="@color/gray_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="安全退出"
        android:textColor="#ff303030"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/dialog_date_picker_center_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/mine_logo"/>
    </LinearLayout>
</LinearLayout>
