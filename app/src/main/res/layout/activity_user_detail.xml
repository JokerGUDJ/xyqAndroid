<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <com.xej.xhjy.ui.view.StatusBarHoldView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/white"/>

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@color/white"
        android:layout_below="@+id/status_bar">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/ic_all_return"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:layout_centerInParent="true"
            android:textColor="#ff232326"
            android:textStyle="bold"
            android:textSize="@dimen/sp_18"/>
        <TextView
            android:id="@+id/ll_goto_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_19"
            android:text="编辑"
            android:textColor="#ff232326"
            android:textSize="@dimen/sp_16"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_head"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_15">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5D68"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:text="头像"/>
                <ImageView
                    android:id="@+id/img_usericon"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@drawable/ic_user_default_icon"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E2E4E8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5D68"
                    android:textSize="@dimen/sp_14"
                    android:text="姓名"/>
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#303030"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E2E4E8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5D68"
                    android:textSize="@dimen/sp_14"
                    android:text="机构名称"/>
                <TextView
                    android:id="@+id/tv_user_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#303030"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E2E4E8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5D68"
                    android:textSize="@dimen/sp_14"
                    android:text="手机号码"/>
                <TextView
                    android:id="@+id/tv_user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#303030"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E2E4E8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5D68"
                    android:textSize="@dimen/sp_14"
                    android:text="性别"/>
                <TextView
                    android:id="@+id/tv_user_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#303030"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E2E4E8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5D68"
                    android:textSize="@dimen/sp_14"
                    android:text="职务"/>
                <TextView
                    android:id="@+id/tv_user_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#303030"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E2E4E8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5D68"
                    android:textSize="@dimen/sp_14"
                    android:text="所属部门"/>
                <TextView
                    android:id="@+id/tv_user_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#303030"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E2E4E8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5D68"
                    android:textSize="@dimen/sp_14"
                    android:text="所属专委会"/>
                <TextView
                    android:id="@+id/tv_user_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#303030"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E2E4E8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5D68"
                    android:textSize="@dimen/sp_14"
                    android:text="固定电话"/>
                <TextView
                    android:id="@+id/tv_user_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#303030"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E2E4E8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5D68"
                    android:textSize="@dimen/sp_14"
                    android:text="邮箱"/>
                <TextView
                    android:id="@+id/tv_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#303030"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E2E4E8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5D68"
                    android:textSize="@dimen/sp_14"
                    android:text="工作地址"/>
                <TextView
                    android:id="@+id/tv_user_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#303030"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:src="@drawable/mine_logo"/>
</RelativeLayout>
