<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">
        <ImageView
            android:id="@+id/img_liveing_type"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_liveing_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_liveing_type"
            android:textColor="#1E293D"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_6" />
        <ImageView
            android:id="@+id/img_more_liveing"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_9"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right"/>
        <TextView
            android:id="@+id/tv_more_liveing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="更多"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/img_more_liveing"
            android:textSize="@dimen/sp_14"
            android:textColor="#768094"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_shadow"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_97">
                <ImageView
                    android:id="@+id/img_liveing_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_97"
                    android:scaleType="fitXY"
                    android:src="@drawable/liveing_default_img"/>
                <TextView
                    android:id="@+id/tv_join_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="11dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_liveing_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="#1E293D"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="@dimen/sp_13" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_7">
                <TextView
                    android:id="@+id/tv_liveing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="#2c3c5a"
                    android:textSize="@dimen/sp_11"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_item_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_shadow"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_97">
                <ImageView
                    android:id="@+id/img_liveing_cover_image1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_97"
                    android:scaleType="centerCrop"
                    android:src="@drawable/liveing_default_img"/>
                <TextView
                    android:id="@+id/tv_join_count1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="11dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_liveing_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:singleLine="true"
                android:textColor="#1E293D"
                android:textStyle="bold"
                android:textSize="@dimen/sp_13" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_7">
                <TextView
                    android:id="@+id/tv_liveing_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="#2c3c5a"
                    android:textSize="@dimen/sp_11"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>