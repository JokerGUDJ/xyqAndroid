<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_140"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="horizontal"
    android:background="@drawable/meeting_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_apply_status"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_alignParentBottom="true"/>
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="@dimen/dp_76"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_18"
            android:visibility="gone"
            android:text="立即报名"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            style="@style/ButtonText"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/bg_red"/>
                <TextView
                    android:id="@+id/tv_meeting_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:maxWidth="@dimen/dp_250"
                    android:maxLines="2"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:textColor="#2C3C5A"
                    android:textSize="@dimen/dp_15"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/img_meeting_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_alignParentRight="true"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_meeting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/dp_250"
                android:singleLine="true"
                android:drawableLeft="@drawable/icon_meeting_time"
                android:drawablePadding="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#2C3C5A"
                android:textSize="@dimen/dp_12"/>
            <TextView
                android:id="@+id/tv_meet_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/dp_250"
                android:singleLine="true"
                android:drawableLeft="@drawable/icon_meeting_addr"
                android:drawablePadding="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#2C3C5A"
                android:textSize="@dimen/dp_12"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>