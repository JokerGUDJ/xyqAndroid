<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F8F8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.xej.xhjy.ui.view.StatusBarHoldView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/white"/>

        <com.xej.xhjy.ui.view.TitleView
            android:id="@+id/titleview"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:zxingIsShow="false"
            app:messageIsShow="false"
            app:titleString="注册"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#E54844"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="*"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/tv_auth_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_auth"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="图片验证码"
                android:textSize="@dimen/sp_14"/>
            <EditText
                android:id="@+id/edt_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/img_auth"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textColor="#5B5D68"
                android:textColorHint="#BFC1C6"
                android:background="@color/transparent"
                android:textCursorDrawable="@null"
                android:hint="请输入"
                android:textSize="@dimen/sp_14"/>
            <ImageView
                android:id="@+id/img_auth"
                android:layout_width="@dimen/dp_94"
                android:layout_height="@dimen/dp_37"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:scaleType="fitXY" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E2E4E8"
            android:layout_marginLeft="@dimen/dp_15"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#FF5241"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="*"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/tv_sms_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_sms"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="短信验证码"
                android:textSize="@dimen/sp_14"/>
            <EditText
                android:id="@+id/edt_sms"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/cd_sms"
                android:layout_marginRight="@dimen/dp_10"
                android:maxLines="1"
                android:textColor="#5B5D68"
                android:textColorHint="#BFC1C6"
                android:background="@color/transparent"
                android:layout_centerVertical="true"
                android:textCursorDrawable="@null"
                android:hint="请输入"
                android:textSize="@dimen/sp_14"/>
            <com.xej.xhjy.common.view.countdown.CountdownView
                android:id="@+id/cd_sms"
                android:layout_width="@dimen/dp_92"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/selector_btn_login"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/album_dp_15"
                android:text="获取验证码"
                android:textColor="#FF5241"
                android:textSize="13dp"
                android:visibility="visible" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E2E4E8"
            android:layout_marginLeft="@dimen/dp_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#FF5241"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="*"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_sms"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="密码"
                android:textSize="@dimen/sp_14"/>
            <cn.passguard.PassGuardEdit
                android:id="@+id/register_password1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/transparent"
                android:gravity="center_vertical|right"
                android:hint="@string/tv_hint_pwd"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/gray_text"
                android:textColorHint="@color/gray_text_hint"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E2E4E8"
            android:layout_marginLeft="@dimen/dp_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#FF5241"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="*"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_sms"
                android:gravity="center_vertical"
                android:textColor="#5B5D68"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="确认密码"
                android:textSize="@dimen/sp_14"/>
            <cn.passguard.PassGuardEdit
                android:id="@+id/register_password2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center_vertical|right"
                android:layout_marginRight="@dimen/dp_15"
                android:hint="再次输入"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#5B5D68"
                android:textColorHint="#BFC1C6"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        <TextView
            android:id="@+id/btn_step2_next"
            android:layout_width="@dimen/dp_282"
            android:layout_height="@dimen/dp_54"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="完成"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_12"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/butn_big_weak" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_40"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/mine_logo"/>
    </LinearLayout>
</RelativeLayout>
