<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_22"
    android:orientation="horizontal"
    android:background="@drawable/meeting_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_apply_status"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_m_2"
            android:layout_marginTop="@dimen/dp_m_2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_22"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_meeting_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:maxWidth="@dimen/dp_220"
                    android:maxLines="2"
                    android:textColor="#282C3D"
                    android:textSize="@dimen/dp_15"
                    android:ellipsize="end"
                    android:layout_toLeftOf="@+id/img_meeting_status"
                    android:layout_marginRight="@dimen/dp_7"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/img_meeting_status"
                    android:layout_width="@dimen/dp_47"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_meeting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:singleLine="true"
                android:drawableLeft="@drawable/icon_meeting_time"
                android:drawablePadding="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:textColor="#282C3D"
                android:textSize="@dimen/dp_12"/>
            <TextView
                android:id="@+id/tv_meet_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:drawableLeft="@drawable/icon_meeting_addr"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="#282C3D"
                android:textSize="@dimen/dp_12"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_menu_icon"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:gravity="right">
            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/icon_menu"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="@dimen/dp_110"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="@dimen/dp_55"
            android:layout_height="match_parent"
            android:text="编辑"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:textSize="@dimen/sp_13"
            android:background="#FD6B23"/>
        <TextView
            android:id="@+id/tv_del"
            android:layout_width="@dimen/dp_55"
            android:layout_height="match_parent"
            android:text="删除"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:textSize="@dimen/sp_13"
            android:background="@drawable/bg_textview_delete"/>
    </LinearLayout>
</LinearLayout>